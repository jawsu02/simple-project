<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

    <context:annotation-config/>
    <context:component-scan base-package="com.tcg.automation"/>

    <beans profile="APP">
        <context:property-placeholder location="com/tcg/automation/config/config-app.properties" order="1"
                                      ignore-unresolvable="true"/>
    </beans>

    <!--<context:property-placeholder location="com/tcg/automation/config/config.properties"/>-->
    <beans profile="DEV">
        <context:property-placeholder location="com/tcg/automation/config/url.properties"/>
        <context:property-placeholder location="com/tcg/automation/config/config-dev.properties" order="1"
                                      ignore-unresolvable="true"/>
    </beans>

    <beans profile="QA">
        <context:property-placeholder location="com/tcg/automation/config/url.properties"/>
        <context:property-placeholder location="com/tcg/automation/config/config-qa.properties" order="1"
                                      ignore-unresolvable="true"/>
    </beans>

    <beans profile="UAT">
        <context:property-placeholder location="com/tcg/automation/config/url.properties"/>
        <context:property-placeholder location="com/tcg/automation/config/config-uat.properties" order="1"
                                      ignore-unresolvable="true"/>
    </beans>


</beans>
